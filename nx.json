{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "namedInputs": {
    "noMarkdown": ["!{projectRoot}/**/*.md"]
  },
  "targetDefaults": {
    "build": {
      "inputs": ["noMarkdown", "^noMarkdown"],
      "dependsOn": ["^build"],
      "cache": true
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": true
    },
    "test": {
      "inputs": ["noMarkdown", "^noMarkdown"],
      "cache": true
    },
    "check": {
      "inputs": ["noMarkdown", "^noMarkdown"],
      "cache": true
    }
  }
}
  